<div class="side-bar-header">
 <div class="user-name">
  <%= link_to current_user.name, edit_user_path(current_user) %>
 </div>
 <div class="create-rooms">
  <%= link_to "チャットを作成する", new_room_path %>
 </div>
</div>

<div class="rooms">
 <% current_user.rooms.each do |room| %>
 <!-- eachメソッドでログインしているユーザーがいるすべてのチャットルームに対して同じ処理を行う -->
  <div class="room">
   <div class="room-name"> 
    <%= link_to room.name , room_messages_path(room) %>
    <!-- パスにroomを引用することで、メッセージと紐づいているチャットルームのidを持たせる -->
   </div>
  </div>
 <% end %>
</div>
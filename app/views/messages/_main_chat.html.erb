<div class="chat-header">
 <div class="left-header">
  <div class="current-room">hogefuga</div>
 </div>
 <div class="right-header">
  <div class="leave-room">
   <a href="#">チャットを終了する</a>
  </div>
 </div>
</div>

<div class="messages">
 <div class="message">
  <div class="message-information">
   <div class="message-user">Tom</div>
   <div class="message-date">2020/3/31(Wed) 12:42:30</div>
  </div>
  <div class="message-content">おはよう</div>
 </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
<!-- messagesのルーティングがroomsにネストされている -->
 <div class="form-input">
  <%= f.text_field :content, class: 'form-message', placeholder: 'type a message'%>
  <label class="form-image">
   <span class="image-file">画像</span>
   <%= f.file_field :image, class: 'hidden' %>
  </label>
 </div>
 <%= f.submit '送信', class: 'form-submit' %>
<% end %>